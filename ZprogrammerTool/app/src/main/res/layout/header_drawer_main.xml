<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_header"
        android:orientation="vertical" />

    <com.pkmmte.view.CircularImageView
        android:id="@+id/user_portrait_pic"
        android:layout_width="@dimen/user_portrait_pic_size"
        android:layout_height="@dimen/user_portrait_pic_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_launcher"
        android:transitionName="user_portrait_pic" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/user_portrait_pic"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/user_portrait_pic"
        android:layout_marginBottom="10dp"
        android:text="@string/user_name_empty"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="18sp"/>


</RelativeLayout>